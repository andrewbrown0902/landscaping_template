    <script>
      (function () {
        // ---- Load More (masonry) toggle ----
        const toggleBtn = document.getElementById("toggleMoreWorkBtn");
        const moreGrid = document.getElementById("moreWorkGrid");

        if (toggleBtn && moreGrid) {
          toggleBtn.addEventListener("click", function () {
            const isHidden = moreGrid.classList.contains("lb-hidden");
            if (isHidden) {
              moreGrid.classList.remove("lb-hidden");
              toggleBtn.innerHTML =
                '<span class="material-symbols-outlined text-base">expand_less</span> Show Less';
            } else {
              moreGrid.classList.add("lb-hidden");
              toggleBtn.innerHTML =
                '<span class="material-symbols-outlined text-base">expand_more</span> Load More Photos';
            }
          });
        }

        // ---- Lightbox ----
        const lightbox = document.getElementById("lightbox");
        const backdrop = document.getElementById("lightboxBackdrop");
        const img = document.getElementById("lightboxImg");
        const caption = document.getElementById("lightboxCaption");
        const closeBtn = document.getElementById("lightboxClose");

        function openLightbox(src, cap) {
          if (!lightbox || !img) return;
          img.src = src;
          caption.textContent = cap || "";
          lightbox.classList.remove("lb-hidden");
          document.body.style.overflow = "hidden";
        }

        function closeLightbox() {
          if (!lightbox || !img) return;
          lightbox.classList.add("lb-hidden");
          img.src = "";
          caption.textContent = "";
          document.body.style.overflow = "";
        }

        document.addEventListener("click", function (e) {
          const trigger = e.target.closest("[data-lightbox]");
          if (!trigger) return;

          const src = trigger.getAttribute("data-src");
          const cap = trigger.getAttribute("data-caption") || "";
          if (src) openLightbox(src, cap);
        });

        if (backdrop) backdrop.addEventListener("click", closeLightbox);
        if (closeBtn) closeBtn.addEventListener("click", closeLightbox);

        document.addEventListener("keydown", function (e) {
          if (e.key === "Escape" && lightbox && !lightbox.classList.contains("lb-hidden")) {
            closeLightbox();
          }
        });
      })();
    </script>
